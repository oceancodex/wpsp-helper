<idea-plugin>
    <idea-version since-build="242.0"/>
    <id>com.wpsp.wpsp-helper</id>
    <name>WPSP Helper</name>
    <vendor email="oceancodexvn@gmail.com">oceancodex</vendor>
    <version>0.4.2</version>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.jetbrains.php</depends>

    <description>WPSP Helper helps you navigate and suggest routes in the WPSP framework accurately and extremely quickly. Perfect support for WordPress plugin building projects using the WPSP framework.</description>

    <extensions defaultExtensionNs="com.intellij">
        <completion.contributor implementationClass="com.wpsp.helper.WpspRouteClassCompletionContributor" language="any" order="first"/>
        <completion.contributor implementationClass="com.wpsp.helper.WpspRouteCompletionContributor" language="any"/>
        <psi.referenceContributor implementation="com.wpsp.helper.WpspRouteReferenceContributor" language=""/>
    </extensions>
</idea-plugin>
